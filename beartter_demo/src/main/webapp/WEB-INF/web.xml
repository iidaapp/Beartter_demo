<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.CallbackServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signUpServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.SignUpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mainServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.MainServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signUpConfirm</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.SignUpConfirm</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signUpComplete</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.SignUpComplete</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>signUpServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<url-pattern>/callback</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mainServlet</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signUpConfirm</servlet-name>
		<url-pattern>/confirm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signUpComplete</servlet-name>
		<url-pattern>/complete</url-pattern>
	</servlet-mapping>
</web-app>