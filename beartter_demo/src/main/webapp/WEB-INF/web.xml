<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.CallbackServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signUpServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.SignUpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>topServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.servlet.TopServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signUpDetail</servlet-name>
		<jsp-file>/page/signup.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>signUpServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<url-pattern>/callback</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>topServlet</servlet-name>
		<url-pattern>/top</url-pattern>
	</servlet-mapping>
<servlet-mapping>
	<servlet-name>signUpDetail</servlet-name>
	<url-pattern>/signup_detail</url-pattern>
</servlet-mapping>
</web-app>