<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>jsonTestServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.JsonTestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>twitterOauthSampleServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.TwitterOauthSampleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<servlet-class>com.iidaapp.beartter_demo.CallbackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jsonTestServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>twitterOauthSampleServlet</servlet-name>
		<url-pattern>/sample</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>twitterCallbackServlet</servlet-name>
		<url-pattern>/callback</url-pattern>
	</servlet-mapping>
</web-app>